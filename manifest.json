{
    "manifest_version": 3,
    "name": "ClearTerms - T&C Summarizer",
    "version": "1.1.0",
    "description": "Automatically detect and summarize Terms & Conditions pages using AI",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "alarms",
        "tabs"
    ],
    "host_permissions": [
        "https://clearterms-backend.onrender.com/*"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "T&C Summarizer",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content/content.js"],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "background/background.js"
        
    },
    "options_page": "options/options.html",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}